<div class="create-blog content">
    <form>
      <label for="title">Card title:</label>
      <input type="text" id="title" name="title" required>
      <label for="desc">Card Description:</label>
      <input type="text" id="desc" name="desc" required>
      <label for="due">Card due date:</label>
      <input type="date" name="due" id="due" required>
      <label for="priority">Card Priority:</label>
      <select name="priority" id="priority">
        <option value="1">Urgent</option>
        <option value="2">High alert</option>
        <option value="3">Medium</option>
        <option value="4">Non alert</option>
      </select>
      <label for="done"></label>
      <select name="done" id="done">
        <option value="F">Finished</option>
        <option value="T">To Do</option>
      </select>
      <button>Submit</button>
    </form>
  </div>