<!-- Active To-Dos Section -->
<h1 class="text-2xl font-bold text-gray-800 mb-6">&gt; Active To Dos</h1>

<% if (doneCards && doneCards.length > 0) { %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
    <% doneCards.forEach((card) => { %>
      <div class="bg-cyan-400 rounded-lg border-2 border-black flex flex-col justify-between h-72" id="card-<%= card._id %>">
        <!-- Title Section -->
        <div class="p-2 border-b-2 border-black">
          <div class="font-semibold text-gray-800 p-2 text-lg" contenteditable="true">
            <%= card.title || "Untitled" %>
          </div>
        </div>
        
        <!-- Description in the Middle -->
        <div class="p-3 flex-grow" contenteditable="true">
          <%= card.description ? card.description.replace(/\n/g, '<br>') : "" %>
        </div>
        
        <!-- Priority Select and Action Buttons at the Bottom -->
        <div class="flex items-center justify-between p-3 border-t-2 border-black">
          <div class="flex space-x-3">
            <button class="p-1.5 bg-green-500 text-white rounded-md hover:bg-green-600">
              <span class="material-symbols-outlined text-lg">check</span>
            </button>
            <button class="p-1.5 bg-red-500 text-white rounded-md hover:bg-red-600">
              <span class="material-symbols-outlined text-lg">delete</span>
            </button>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
<% } else { %>
  <p class="text-gray-500">No tasks to display.</p>
<% } %>